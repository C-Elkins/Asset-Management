{
  "id": null,
  "title": "App Overview (Spring Boot + JVM + Node)",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "panels": [
    {
      "type": "stat",
      "title": "Backend UP",
      "gridPos": {"x": 0, "y": 0, "w": 6, "h": 4},
      "targets": [{
        "expr": "up{job=\"spring-boot-app\"}",
        "legendFormat": "backend"
      }]
    },
    {
      "type": "stat",
      "title": "Node Exporter UP",
      "gridPos": {"x": 6, "y": 0, "w": 6, "h": 4},
      "targets": [{
        "expr": "up{job=\"node-exporter\"}",
        "legendFormat": "node"
      }]
    },
    {
      "type": "graph",
      "title": "HTTP Requests/sec",
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 7},
      "targets": [{
        "expr": "sum(rate(http_server_requests_seconds_count{job=\"spring-boot-app\"}[5m]))",
        "legendFormat": "req/s"
      }]
    },
    {
      "type": "graph",
      "title": "Response Time (95th %)",
      "gridPos": {"x": 0, "y": 11, "w": 12, "h": 7},
      "targets": [{
        "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{job=\"spring-boot-app\"}[5m])) by (le))",
        "legendFormat": "p95"
      }]
    },
    {
      "type": "graph",
      "title": "JVM Memory Used",
      "gridPos": {"x": 0, "y": 18, "w": 12, "h": 7},
      "targets": [{
        "expr": "sum(jvm_memory_used_bytes{job=\"spring-boot-app\", area=\"heap\"})",
        "legendFormat": "heap"
      }]
    }
  ],
  "templating": {"list": []},
  "time": {"from": "now-6h", "to": "now"}
}
