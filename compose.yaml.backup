services:
  backend:
    build:
      context: ./backend
    image: itam-backend:local
    environment:
      - SPRING_PROFILES_ACTIVE=dev
      - JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0
    healthcheck:
      test: ["CMD", "curl", "-fsS", "http://localhost:8080/api/v1/actuator/health"]
      interval: 30s
      timeout: 5s
      retries: 5

  frontend:
    build:
      context: ./frontend
    image: itam-frontend:local
    environment:
      - BACKEND_ORIGIN=http://backend:8080
    ports:
      - "3001:8080"
    depends_on:
      backend:
        condition: service_healthy
